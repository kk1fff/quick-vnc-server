DISPLAY="1"
DEPTH="8"
GEOMETRY="1024x768"

mkdir -p ~/.vnc

cat > ~/.vnc/xstartup <<EOF
#!/bin/bash
xrdb $HOME/.Xresources
startxfce4
EOF

chmod a+x ~/.vnc/xstartup

PW="$(pwgen -sn 8 -N 1)"
echo $PW | vncpasswd -f > ~/.vnc/passwd
chmod go-rw ~/.vnc/passwd

/usr/bin/vncserver -depth ${DEPTH} -geometry ${GEOMETRY} -deferupdate 100 :${DISPLAY} -localhost

echo "Password: $PW"

